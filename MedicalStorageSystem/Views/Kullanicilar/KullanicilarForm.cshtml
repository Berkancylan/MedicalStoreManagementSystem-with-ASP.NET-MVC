@model MedicalStorageSystem.Models.EntityFramework.Kullanici
@{
    ViewBag.Title = "KullanicilarFrom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KullanicilarFrom</h2>

@using (Html.BeginForm("Kaydet", "Kullanicilar", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Ad)
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ad)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Sifre)
        @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Sifre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Role)
        @Html.TextBoxFor(m => m.Role, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Role)
    </div>

    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-success">Kaydet</button>
}