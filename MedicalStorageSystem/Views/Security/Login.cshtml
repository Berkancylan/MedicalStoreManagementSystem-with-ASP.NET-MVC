@model MedicalStorageSystem.Models.EntityFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/LoginPage.css" rel="stylesheet" />
</head>
<body>
    
    <div class="login">
        <div class="loginForm">
            <h3 class="text-center">Login</h3>
            <div class="container" style="padding-top:20px;">
                @if (ViewBag.LoginError != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.LoginError
                    </div>
                }
                @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Ad, new { @class = "Form-filling-section " + (ViewBag.LoginError != null ? "is-invalid-input" : ""), placeholder = "Kullanıcı Adı" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Sifre, new { @class = "Form-filling-section " + (ViewBag.LoginError != null ? "is-invalid-input" : ""), placeholder = "Parola" })
                    </div>
                    <div class="form-group" style="margin-top:40px;border-radius:8px;">
                        <input type="submit" name="submit" class="btn btn-success" style="background-color: #3a4f6b; border:none;" value="Login">
                    </div>
                }
            </div>
            </div>
        </div>
    </body>
    </html>
