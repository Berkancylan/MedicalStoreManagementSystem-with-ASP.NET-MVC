@model List<MedicalStorageSystem.Models.SearchResult>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h2>Arama Sonuçları</h2>

<form method="get" action="/Search/Index">
    <input type="text" name="searchTerm" placeholder="Arama Terimi" class="form-control" style="width: 300px; display: inline-block;" />
    <button type="submit" class="btn btn-primary">Ara</button>
</form>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>Tablo Adı</th>
                <th>ID</th>
                <th>Aranan Alan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TabloAdi</td>
                    <td>@item.ID</td>
                    <td>@item.ArananAlan</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="mt-3">Sonuç bulunamadı.</p>
}